/* Components/timemicro-toast/timemicro-toast.wxss */
@import '/styles/base.wxss';
@import '/icons/iconfont.wxss';

.toast-box{
  opacity: 0;
}
.toast-shadow{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  z-index: 10000;
  background-color: rgba(0,0,0,0.1);
}
.toast-content{
  background-color: rgba(0,0,0,0.8);
  z-index: 10001;
  position: fixed;
}
.toast-text{
  color: #fff;
}
.icon{
  text-align: center;
  display: block;
}